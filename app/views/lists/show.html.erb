<div class="container">
  <h1>
    List <%= @list.name %>
  </h1>

  <%= link_to "Add movie", list_bookmarks_path, class: "btn btn-primary" %>
  <%= link_to "Back to lists", lists_path, class: "btn btn-secondary" %>

  <div class="d-flex justify-content-center">
    <div class="d-flex flex-column mt-3" style="max-width: 540px;">
      <% @list.movies.each do |movie| %>
        <div class="card mb-3" style="max-width: 540px; max-height: 272px;">
          <div class="row g-0">
            <div class="col-4" style="max-height: 272px;">
              <img src="<%= movie.poster_url %>" class="img-thumbnail img-fluid" alt="...">
            </div>
            <div class="col-8" style="max-height: 272px;">
              <div class="card-body"  style="max-height: 272px;">
                <h5 class="card-title"><strong><%= movie.title %></strong></h5>
                <p class="card-text"><strong>Rating:</strong> <%= movie.rating %></p>
                <p class="card-text"><%= movie.overview %></p>
                <% @bookmarks.each do |bookmark| %>
                  <% if bookmark.movie_id == movie.id %>
                    <p class="card-text"><strong>Bookmark:</strong> <%= bookmark.comment %> </p>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
